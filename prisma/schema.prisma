generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  company     String
  location    String?
  type        String
  salary      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  requirements String[]
  email       String
  postedAt    DateTime @default(now())

  @@map("jobs")
}